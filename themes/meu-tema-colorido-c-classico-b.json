{
  "name": "Meu Tema Clássico Colorido",
  "type": "light",
  "colors": {
    "editor.background": "#ffffff",
    "editor.foreground": "#000000",
    "editor.lineHighlightBackground": "#e0e0e0",
    "editorLineNumber.foreground": "#888888",
    "activityBar.background": "#e2e8f0",
    "sideBar.background": "#edf2f7",
    "activityBar.foreground": "#4a5568",
    "activityBarBadge.background": "#718096",
    "statusBar.background": "#a0aec0",
    "statusBar.foreground": "#ffffff",
    "statusBarItem.hoverBackground": "#cbd5e0",
    "titleBar.activeBackground": "#e2e8f0",
    "titleBar.activeForeground": "#2d3748",
    "titleBar.inactiveBackground": "#f0f4f8",
    "titleBar.inactiveForeground": "#4a5568",
    "button.background": "#a0aec0",
    "dropdown.background": "#edf2f7",
    "dropdown.foreground": "#2d3748",
    "dropdown.border": "#cbd5e0",
    "input.background": "#f7fafc",
    "input.foreground": "#4a5568",
    "input.border": "#e2e8f0",
    "terminal.foreground": "#4a5568",
    "scrollbarSlider.background": "#d6deeb",
    "scrollbarSlider.hoverBackground": "#cbd5e0",
    "scrollbarSlider.activeBackground": "#a0aec0"
  },
  "tokenColors": [
    {
      "name": "Comentários",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#008000"
      }
    },
    {
      "name": "Strings",
      "scope": ["string"],
      "settings": {
        "foreground": "#ff4500",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Funções",
      "scope": ["entity.name.function"],
      "settings": {
        "foreground": "#0000ff",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Variáveis",
      "scope": ["variable"],
      "settings": {
        "foreground": "#800080",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Palavras-chave",
      "scope": ["keyword"],
      "settings": {
        "foreground": "#ff1493",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Constantes",
      "scope": ["constant"],
      "settings": {
        "foreground": "#8b0000",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Números",
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#483d8b",
        "fontStyle": "bold"
      }
    }
  ]
}
